<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
<!--        <item name="colorAccent">@color/dusty_orange</item>-->
    </style>

    <style name="NotoRegular">
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NotoBold">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NotoMedium">
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
        <item name="fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NotoDemiLight">
        <item name="android:fontFamily">@font/notosanscjkkr_demilight</item>
        <item name="fontFamily">@font/notosanscjkkr_demilight</item>
        <item name="android:includeFontPadding">false</item>
    </style>

<!--    <style name="SourceHansRegular">-->
<!--        <item name="android:fontFamily">@font/sourcehansanskr_regular</item>-->
<!--        <item name="fontFamily">@font/sourcehansanskr_regular</item>-->
<!--        <item name="android:includeFontPadding">false</item>-->
<!--    </style>-->

    <style name="Dialog.Onboard" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Dialog.Text" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogAnim">
        <!--<item name="android:windowEnterAnimation">@anim/anim_popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_slide_out</item>-->
    </style>

    <style name="DialogAnim.Restore">
        <item name="android:windowEnterAnimation">@null</item>
    </style>

</resources>